@model CRMCarDealer.Models.AddProductModel
@{
    ViewBag.Title = "AddProduct";
}

<h2>AddProduct</h2>

@using (Html.BeginForm("AddProduct", "Home"))
{


<div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Model, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Model, new { @class = "form-control", required = "required" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.EngineCapacity, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.EngineCapacity, new { @class = "form-control", required = "required" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.ChasisSeries, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.ChasisSeries, new { @class = "form-control", required = "required" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Price, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.IsForSale, new { @class = "col-md-2 control-label" })
    <div class = "col-md-10">
        @Html.RadioButtonFor( m => m.IsForSale, "false", new { @class = "radio-control", required = "required" }) False
        @Html.RadioButtonFor( m => m.IsForSale, "true", new { @class = "radio-control", required = "required" }) True
    </div>
</div>


<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Submit" class="btn btn-default" />
    </div>
</div>
}